{
  "manifest_version": 2,

  "name": "Gifyezer",
  "version": "1.0",
  "description": "Get Control Of GIFs !!",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.producthunt.com/", "http://www.producthunt.com/"],
   
      "js": ["jquery.js", "raven-3.8.0.js", "gifyezer.js"]
    }
  ],
  
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "web_accessible_resources": [
    "icon.png"
  ],
  "permissions" :[
    "storage"
  ]
}